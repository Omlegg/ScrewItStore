@using ScrewItBackEnd.Dtos
@using ScrewItBackEnd.Entities
@model ProductDtoForPic
@{
   string GetCategoryGroup(ProductCategories category)
    {
        return category switch
        {
            // Group mappings
                ProductCategories.Screws_Wood or
                ProductCategories.Bolts or
                ProductCategories.Nails or
                ProductCategories.Nuts => "Fasteners",

                ProductCategories.Hammers or
                ProductCategories.Screwdrivers => "Tools",

                ProductCategories.WoodPieces or
                ProductCategories.MetalScraps => "Materials",

                ProductCategories.RemoteControls or
                ProductCategories.Batteries_AA => "Household",

                ProductCategories.USBCables or
                ProductCategories.HDMICords => "Cables",

                ProductCategories.GlueSticks or
                ProductCategories.ThreadSpools => "Craft",

                ProductCategories.IKEAScrews or
                ProductCategories.DrawerPulls => "Furniture",

                ProductCategories.Coins or
                ProductCategories.Marbles => "Pocket",

                ProductCategories.SockSingles => "Laundry",

                ProductCategories.EyeglassScrews => "TinyFixes",

                ProductCategories.LEGOBits => "Toys",

                _ => "Other"
            };
    }
    List<ProductCategories> categories = new List<ProductCategories>((ProductCategories[])Enum.GetValues(typeof(ProductCategories))); 
    IEnumerable<ValidationResponse>? validationErrors = null;
    var validationErrorsObject = base.ViewData["validation_errors"];
    Console.WriteLine(validationErrorsObject);
    if(validationErrorsObject is IEnumerable<ValidationResponse>) {
        validationErrors = validationErrorsObject as IEnumerable<ValidationResponse>;
        
    }
}




