<div id="main-home-page">
    <form id="form-create" method="post" action="/Product/Create" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
          <div style="min-width: 250px; width:900px; gap:30px; height:450px; align-self:center; display:flex; flex-direction:column;"> 
              <label class="create-form-label" for="CategoryId">Select Product Categories</label>

              <div style="display: flex; overflow-x: auto; white-space: nowrap; gap: 8px; padding-bottom: 8px;">
                  <button type="button" onclick="filterCategories('All')">All</button>
                  <button type="button" onclick="filterCategories('Fasteners')">Fasteners & Hardware</button>
                  <button type="button" onclick="filterCategories('Tools')">Hand Tools</button>
                  <button type="button" onclick="filterCategories('Materials')">Materials & Bits</button>
                  <button type="button" onclick="filterCategories('Household')">Household</button>
                  <button type="button" onclick="filterCategories('Cables')">Connectors & Cables</button>
                  <button type="button" onclick="filterCategories('Craft')">Craft Supplies</button>
                  <button type="button" onclick="filterCategories('Furniture')">Furniture Bits</button>
                  <button type="button" onclick="filterCategories('Pocket')">Pocket Items</button>
                  <button type="button" onclick="filterCategories('Laundry')">Laundry Items</button>
                  <button type="button" onclick="filterCategories('TinyFixes')">Tiny Fixes</button>
                  <button type="button" onclick="filterCategories('Toys')">Gadget & Toy Pieces</button>
              </div>

              <!-- Category Select -->
              <select class="create-form-input" id="CategoryId" name="CategoryId" multiple required style="height: 200px;">
                  @foreach (var category in categories)
                  {
                      <option value="@Convert.ToInt32(category)" data-group="@GetCategoryGroup(category)">
                          @category
                      </option>
                  }
              </select>
          </div>

          <script>
              function filterCategories(group) {
                  const options = document.querySelectorAll('#CategoryId option');
                  options.forEach(opt => {
                      const optGroup = opt.dataset.group;
                      opt.style.display = (group === 'All' || optGroup === group) ? 'block' : 'none';
                  });
              }
          </script>
        <div id="create-form" >
          
          <div style=" display: flex; width:800px; flex-direction: column; gap: 20px; align-items: center;">
              <div class="form-column">
                  <label class="create-form-label" for="Name">Product's Name</label>
                  <input class="create-form-input" style=" min-width: 250px;width:600px;" id="Name" name="Name" type="text" placeholder="Enter your product's name" required />
              </div>

              <div class="form-column">
                  <label class="create-form-label" for="Price">Product's Price</label>
                  <input class="create-form-input" style=" min-width: 250px;width:600px;" id="Price" name="Price" type="number" step="0.01" placeholder="Enter your product's price" required />
              </div>


              <div class="form-column">
                  <label class="create-form-label" for="AmountInStock">Product's Amount</Inp></label>
                  <input class="create-form-input" style=" min-width: 250px;width:600px;" id="AmountInStock" name="AmountInStock" type="number" step="1" placeholder="Enter your product's price" required />
              </div>
              <div class="form-column">
                  <label class="create-form-label" for="Description">Product's Description</label>
                  <textarea class="create-form-input" style=" min-width: 250px;width:600px;" id="Description" name="Description" placeholder="Enter your product's description" required></textarea>
              </div>
              <div style="display: flex;gap:40px;">
                <div class="form-column">
                    <label class="create-form-label" for="Width">Product's Width</label>
                    <input class="create-form-input" style=" min-width: 250px;width:280px;" id="Width" name="Width" placeholder="Enter your product's width" type="number" step="0.01" required></textarea>
                </div>
                <div class="form-column">
                    <label class="create-form-label" for="Height">Product's Height</label>
                    <input class="create-form-input" style=" min-width: 250px;width:280px;" id="Height" name="Height" placeholder="Enter your product's height" type="number" step="0.01" required></textarea>
                </div>
              </div>
          </div>

          <div style="min-width: 250px; width:250px;">
              <label class="create-form-label" for="ProductPicture">Picture</label>
              <input type="file" class="form-control create-form-input" id="ProductPicture" name="ProductPicture" required />
              <div id="image-preview-container" style="margin-top:10px;">
                  <img id="image-preview" style="max-width: 100%; height: auto; display: none; border: 1px solid #ccc; padding: 10px;" />
              </div>
          </div>
      </div>
      <div style="display: flex; justify-content: center; margin-top: 30px;">
          <button type="submit">Create</button>
      </div>

      </form>
    </div>

    @section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<script>
document.getElementById('ProductPicture').addEventListener('change', function(event) {
    const preview = document.getElementById('image-preview');
    const file = event.target.files[0];

    if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            preview.src = e.target.result;
            preview.style.display = 'block'; // Show the image
        };
        reader.readAsDataURL(file);
    } 
});
</script>